# Lead Connector Configuration
# Copy this file to .env.local and fill in your actual values

# Generic Lead Connector (for any custom service)
LEAD_CONNECTOR_API_KEY=your_api_key_here
LEAD_CONNECTOR_ENDPOINT=https://your-lead-connector-service.com/api/submit

# HubSpot Integration
HUBSPOT_API_KEY=your_hubspot_api_key_here
HUBSPOT_PORTAL_ID=your_portal_id_here
HUBSPOT_FORM_ID=your_form_id_here

# Mailchimp Integration
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_LIST_ID=your_list_id_here
MAILCHIMP_SERVER=us1

# ConvertKit Integration
CONVERTKIT_API_KEY=your_convertkit_api_key_here
CONVERTKIT_FORM_ID=your_form_id_here

# ActiveCampaign Integration
ACTIVECAMPAIGN_API_KEY=your_activecampaign_api_key_here
ACTIVECAMPAIGN_ACCOUNT=your_account_name_here
ACTIVECAMPAIGN_LIST_ID=your_list_id_here

# Salesforce Integration
SALESFORCE_ACCESS_TOKEN=your_salesforce_access_token_here
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com

# Go High Level Integration (Primary)
GOHIGHLEVEL_WEBHOOK_URL=https://your-webhook-url.gohighlevel.com/webhook
GOHIGHLEVEL_LOCATION_ID=your_location_id_here
GOHIGHLEVEL_CALENDAR_ID=your_calendar_id_here
GOHIGHLEVEL_FUNNEL_ID=your_funnel_id_here
GOHIGHLEVEL_CAMPAIGN_ID=your_campaign_id_here

# Go High Level API Integration (Alternative)
GOHIGHLEVEL_API_KEY=your_api_key_here

# Go High Level Contact Tags (comma-separated)
GOHIGHLEVEL_CONTACT_TAGS=blanchard-orthodontics,website-lead,orthodontics

# Debug Mode (set to false for production)
DEBUG_LEAD_CONNECTOR=false

# Sanity CMS Configuration (already configured)
